<h1>Sign Up for the Scout Tracking Website Below</h1>

<br>
    <% if @scout.errors.any? %>

        <% @scout.errors.full_messages.each do |error| %>

            <h4><%= error %></h4>
        
        <% end %>

    <% end %>
<br>

<%= form_with model: @scout do |f| %>

    <%= f.label :first_name%>
    <%= f.text_field :first_name%><br>
    <%= f.label :last_name%>
    <%= f.text_field :last_name%><br>
    <%= f.label :rank%>
    <%= f.text_field :rank%><br>
    <%= f.label :username%>
    <%= f.text_field :username%><br>
    <%= f.label :password%>
    <%= f.password_field :password%><br>

<%= f.submit "Signup" %>
<% end %>